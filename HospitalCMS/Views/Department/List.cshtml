@model IEnumerable<HospitalCMS.Models.DepartmentDto>

@{
    ViewBag.Title = "List";
}

<h2>Department List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Department
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartmentId }) |
            @Html.ActionLink("Delete", "ConfirmDelete", new { id=item.DepartmentId })
        </td>
    </tr>
}

</table>
