@model HospitalCMS.Models.DepartmentDto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Model.Name
        </dd>

    </dl>
</div>
<div id="accordion">
    @if (Model.FAQs != null && Model.FAQs.Count() != 0)
    {
        foreach (var faq in Model.FAQs)
        {
            <h3 class="question">@faq.Question</h3>
            <div class="answer">
                <p>
                    @faq.Answer
                </p>
            </div>
        }
    }
   
</div>
<p
    @if (User.IsInRole("Admin"))
    {
    @Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentId }) <span>|</span>
    }
    @Html.ActionLink("Back to List", "List")
</p>
