@model HospitalCMS.Models.PatientDto

@{
    ViewBag.Title = "ConfirmDelete";
}

<h2>ConfirmDelete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Model.FirstName
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Model.LastName
        </dd>

        <dt>
            DOB
        </dt>

        <dd>
            @Model.DOB
        </dd>

        <dt>
            Gender
        </dt>

        <dd>
            @Model.Gender
        </dd>

        <dt>
            Mobile
        </dt>

        <dd>
            @Model.Mobile
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>

        <dt>
            Marital Status
        </dt>

        <dd>
            @Model.MaritalStatus
        </dd>

        <dt>
            Address 1
        </dt>

        <dd>
            @Model.Address1
        </dd>

        <dt>
            Address 2
        </dt>

        <dd>
            @Model.Address2
        </dd>

        <dt>
            City
        </dt>

        <dd>
            @Model.City
        </dd>

        <dt>
            Country
        </dt>

        <dd>
            @Model.Country
        </dd>

        <dt>
            Postal Code
        </dt>

        <dd>
            @Model.PostalCode
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Patient", new { id = Model.PatientId }, FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
