@model HospitalCMS.Models.Article

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Article</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Title:</label>
            <div class="col-md-10">
                <input class="form-control" name="Title">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Description:</label>
            <div class="col-md-10">
                <textarea class="form-control" name="Description"> </textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Select Events:</label>
            <div class="col-md-10">
                <select class="form-control" name="EventId">
                    <option value="x">Please Select</option>
                    @foreach (var e in ViewData["Events"] as IEnumerable<HospitalCMS.Models.EventDto>)
                    {
                        <option value="@e.EventId">@e.Title</option>

                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
