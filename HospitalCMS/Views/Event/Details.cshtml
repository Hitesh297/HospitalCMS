@model HospitalCMS.Models.EventDto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Department Name
        </dt>

        <dd>
            @Model.Department.Name
        </dd>

        <dt>
            Title
        </dt>

        <dd>
            @Model.Title
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Model.Date
        </dd>

        <dt>
            Picture
        </dt>

        <dd>
            @{
                string imageurl = "/Content/Images/Events/default.png";
                if (Model.HasPic)
                {
                    imageurl = "/Content/Images/Events/" + Model.EventId + "." + Model.PicExtension;
                }
            }
            <div><img style="display:block; max-width:800px;" alt="@Model.Title" src="@imageurl" /></div>
        </dd>

     

        <dt>
            Description
        </dt>

        <dd>
            @Model.Description
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventId }) |
    @Html.ActionLink("Back to List", "List")
</p>
