@model IEnumerable<HospitalCMS.Models.EventDto>

@{
    ViewBag.Title = "List";
}

<h2>Event List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Date
        </th>
        <th>
            Description
        </th>
                <th></th>
            </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Title

                    </td>
                <td>
                    @item.Date
                </td>
        <td>
            @item.Description

        </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.EventId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.EventId }) |
                    @Html.ActionLink("Delete", "ConfirmDelete", new { id=item.EventId })
                </td>
            </tr>
        }

        </table>
