@model HospitalCMS.Models.DoctorDto

@{
    ViewBag.Title = "ConfirmDelete";
}

<h2>ConfirmDelete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Experience
        </dt>

        <dd>
            @Model.Experience
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Model.Phone
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>

        <dt>
            Picture
        </dt>

        <dd>
            @Model.DoctorHasPic
        </dd>

        <dt>
            Picture Extension
        </dt>

        <dd>
            @Model.PicExtension
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Doctor", new { id = Model.DoctorId }, FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
